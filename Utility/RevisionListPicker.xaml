<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:Converter="clr-namespace:BCS.CADs.Synchronization.Utility"
                    xmlns:Views="clr-namespace:BCS.CADs.Synchronization.Views"
                    xmlns:local1="clr-namespace:BCS.CADs.Synchronization.ConfigProperties"
                    xmlns:ViewModels="clr-namespace:BCS.CADs.Synchronization.ViewModels"
                    >
    <local1:PLMProperty x:Key="RegPLMPropertiesConverter"/>
    <Converter:ItemPickerConveter x:Key="itemPickerConveter" />
    <ViewModels:StringImageToResource x:Key="StringToResource" />
    <ViewModels:StringImageToResource x:Key="Menu" />
    <ViewModels:RevisionListViewModel x:Key="RevisionListViewModel"/>

    <ControlTemplate x:Key="IconButton" TargetType="{x:Type ToggleButton}">
        <Border>
            <ContentPresenter />
        </Border>
    </ControlTemplate>

    <Style x:Key="tbListRevStyle" TargetType="{x:Type TextBox}">
        <Style.Triggers>
            <!--<DataTrigger >
                <Setter Property="Background" Value="{Binding SyncColorTypeValue, Mode=TwoWay,Converter={StaticResource RegPLMPropertiesConverter }}" />
            </DataTrigger>-->
            <!--<DataTrigger Binding="{Binding IsModify, Mode=TwoWay,Converter={StaticResource RegPLMPropertiesConverter }}" Value="True" >
                <Setter Property="Background" Value="Red"/>
            </DataTrigger>-->
            <!--<DataTrigger >
                <Setter Property="Background" Value="Red"/>
            </DataTrigger>-->

            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background">
                    <Setter.Value>
                        <LinearGradientBrush>
                            <LinearGradientBrush.GradientStops>
                                <GradientStop Color="Aquamarine" Offset="0"/>
                                <GradientStop Color="Beige" Offset="0.2"/>
                                <GradientStop Color="Firebrick" Offset="0.5"/>
                                <GradientStop Color="DarkMagenta" Offset="0.9"/>
                            </LinearGradientBrush.GradientStops>
                        </LinearGradientBrush>
                    </Setter.Value>
                </Setter>
            </Trigger>
        </Style.Triggers>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type TextBox}">
                    <Grid>
                        <Border BorderThickness="1" BorderBrush="DarkGray">
                            <ScrollViewer x:Name="PART_ContentHost" />
                        </Border>
                        <ToggleButton Template="{StaticResource IconButton}"
                              MaxHeight="21" 
                              Margin="-1,0,0,0" 
                              Name="PopUpImageButton" 
                              Cursor="Hand"
                              Focusable="False"
                              IsChecked="False">

                            <Image  Source="..\Images\ellipsis.png" Stretch="Uniform"  Visibility="Hidden" HorizontalAlignment="Right" Name="ImgPicker"  >
                                <Image.InputBindings>
                                    <MouseBinding Gesture="LeftClick" Command="{Binding Source={StaticResource RevisionListViewModel},Path=ItemPickerImageLeftClick}" CommandParameter="{Binding ElementName=PopUpImageButton}" />
                                </Image.InputBindings>
                            </Image>

                        </ToggleButton>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="true">
                            <Setter Property="Visibility" TargetName="ImgPicker" Value="Visible" />
                        </Trigger>
                        <Trigger Property="IsFocused" Value="true">
                            <Setter Property="Visibility" TargetName="ImgPicker" Value="Visible" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>


